@model IEnumerable<Napping_PJ.Models.Entity.Feature>

@{
	ViewData["Title"] = "Index";
}

<h1>房型特徵</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Image)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					<i class="@Html.DisplayFor(modelItem => item.Image)"></i>
					@Html.DisplayFor(modelItem => item.Image)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.FeatureId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.FeatureId">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.FeatureId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
