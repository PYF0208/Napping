@model Napping_PJ.Areas.Admin.Models.RoleViewModel
<form asp-area="Admin" asp-controller="Roles" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-10">
            <div class="input-group mb-3">
                <label asp-for="Name" class="input-group-text"></label>
                <input asp-for="Name" class="form-control" autocomplete="off" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-2">
            <button class="btn btn-success" type="submit">新增</button>
        </div>
    </div>
</form>