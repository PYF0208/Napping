<section class="filters-section style-four">
    <div class="auto-container clearfix">
        <div class="form-box default-form filter-form-three wow fadeInRight" data-wow-delay="0ms"
             data-wow-duration="1500ms">
            <h4>Book Your Room</h4>

            <form method="" action="">
                <div class="outer clearfix">

                    <div id="vueApp" class="form-group">
                        <template>
                            <div class="demo-date-picker">
                                <div class="block">
                                    <span class="demonstration field-label">Time</span>
                                    <el-date-picker v-model="timeValue"
