@model LoginViewModel

<div class="row">
    <div class="col-md-4">
        <form id="loginForm" asp-controller="Login" asp-action="TryLogin" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span asp-validation-for="Email" class="text-danger"></span>
            <div class="input-group mb-3">
                <label class="input-group-text" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="input-group mb-3">
                <label class="input-group-text" asp-for="Password"></label>
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
            </div>
            <button id="loginSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <form asp-controller="Register" asp-action="OauthGooleLogin" method="post">
            <button type="submit" class="btn btn-primary" name="provider">Google</button>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}